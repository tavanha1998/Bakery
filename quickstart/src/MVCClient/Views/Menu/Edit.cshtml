@model MVCClient.Models.EditBakeryViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Edit Bakery
                </h1>
            </div>
        </div>
    </div>
</section>

<div class="whole-wrap">
    <div class="container">
        <div class="section-top-border">
            <form method="POST">
                <input type="hidden" asp-for="@Model.bakeryModify.Id" />
                <div class="mt-10">
                    <label>Bakery name</label>
                    <input asp-for="@Model.bakeryModify.Name" placeholder="Bakery name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Bakery name'" required class="single-input">
                    <span asp-validation-for="@Model.bakeryModify.Name" class="text-danger"></span>
                </div>
                <div class="mt-10">
                    <label>Price</label>
                    <input asp-for="@Model.bakeryModify.Price" placeholder="Price" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Price'" required class="single-input">
                    <span asp-validation-for="@Model.bakeryModify.Price" class="text-danger"></span>
                </div>
                <div class="mt-10">
                    <label>Bakery Type</label>
                    <div class="form-select">
                        <select class="list" asp-for="@Model.bakeryModify.Idtype" asp-items="@(new SelectList(Model.listBakeryType,"Id","Name"))">
                        </select>
                    </div>
                </div>
                <div class="mt-10">
                    <label>Describe</label>
                    <textarea asp-for="@Model.bakeryModify.Describe" class="single-textarea" placeholder="Describe" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Describe'" required=""></textarea>
                </div>
                <div class="mt-10">
                    <div class="row">
                        <button type="submit" class="genric-btn success">Save changes</button>
                        <button asp-controller="Menu" asp-action="Index" class="genric-btn info">Back</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
