@model BakeryType
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Edit type
                </h1>
            </div>
        </div>
    </div>
</section>

<div class="whole-wrap">
    <div class="container">
        <div class="section-top-border">
            <form method="POST">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.Status" />
                <div class="mt-10">
                    <label>Bakery name</label>
                    <input asp-for="@Model.Name" placeholder="Type name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Type name'" required class="single-input">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mt-10">
                    <div class="row">
                        <button type="submit" class="genric-btn info mr-10">Save changes</button>
                        <button asp-controller="ManageBakeryType" asp-action="Index" class="genric-btn warning">Back</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




