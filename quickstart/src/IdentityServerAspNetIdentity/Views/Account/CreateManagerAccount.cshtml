@model RegisterViewModel

<div class="login-page">
    <div class="page-header">
        <h1>Create new manager account</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Infor account</h3>
                </div>
                <div class="panel-body">

                    <form asp-controller="Account" asp-action="CreateManagerAccount" method="post">
                        <input type="hidden" asp-for="returnUrl" />

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input class="form-control" placeholder="Username" asp-for="UserName" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="ConFirmPassword"></label>
                                <input type="password" class="form-control" placeholder="Confirm password" asp-for="ConFirmPassword" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="GivenName"></label>
                                <input class="form-control" placeholder="Given name" asp-for="GivenName" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="FamilyName"></label>
                                <input class="form-control" placeholder="Family name" asp-for="FamilyName" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="email" class="form-control" placeholder="Email" asp-for="Email" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input class="form-control" placeholder="Address" asp-for="Address" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone"></label>
                                <input class="form-control" placeholder="Phone" asp-for="Phone" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="login">Create</button>
                                <a asp-controller="Account" asp-action="GetAllUser" class="btn btn-default" name="button" value="cancel">Cancel</a>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>